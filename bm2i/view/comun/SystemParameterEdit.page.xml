<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/SystemParameterList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{systemParameterHome.wire}"/>

   <param name="systemParameterFrom"/>
   <param name="systemParameterNombre" value="#{systemParameterHome.systemParameterNombre}"/>


   <navigation from-action="#{systemParameterHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/SystemParameter.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{systemParameterHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/SystemParameter.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{systemParameterHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/SystemParameterList.xhtml"/>
      </rule>
   </navigation>

</page>
