    <mapping resource="beans/Otros.hbm.xml"/>
    <mapping resource="beans/VentaProductos.hbm.xml"/>
    <mapping resource="beans/Remplazo.hbm.xml"/>
    <mapping resource="beans/CuentasXCobrar.hbm.xml"/>
