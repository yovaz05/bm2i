<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="beans.VentaProductos" table="VENTA">
    <id name="id_Venta"  column="ID_VENTA">
        <generator class="native"/>
    </id>          
    
    <property name="fechasalida" column="FECHASALIDA"/>
    <property name="nombre" column="NOMBRE"/>
    <property name="cedula" column="CEDULA"/>
    
    <property name="pagado" type="java.lang.Boolean"  >
    <column name="PAGADO" sql-type="tinyint(1)" not-null="true"/>
    </property>
   
    <property name="contado" column="CONTADO"/>
    <property name="credito" column="CREDITO"/>
    <property name="total" column="TOTAL"/>
    
    <many-to-one name="otros" column="ID_OTROS"/>
    <many-to-one name="usuario" column="ID_USUARIO"/>
    <many-to-one name="horario" column="ID_HORARIO"/>
  

    
</class>
</hibernate-mapping>
